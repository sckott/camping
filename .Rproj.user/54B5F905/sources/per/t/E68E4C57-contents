	function selectOfficeFocussed()
	{
	    this.initValue = this.value;
		
	    return true;
	}
	
	function selectOfficeKeyed(e)
	{
	    var theEvent;
	    var keyCodeTab = "9";
	    var keyCodeEnter = "13";
	    var keyCodeEsc = "27";
		
	    if (e)
	    {
	        theEvent = e;
	    }
